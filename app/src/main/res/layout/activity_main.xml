<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/tomato"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="CÃ‚MERA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/galeria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/blue"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="GALERIA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/telefone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/orange"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="TELEFONE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contatos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/teal"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="CONTATOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/whatsappgreen"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="WHATSAPP"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mensagens"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/chocolate"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="MENSAGENS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brilho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/purple"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="AJUSTAR\nBRILHO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alarme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/deeppink"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="ALARME"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wpcontato1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/deeppink"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wpcontato2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/chocolate"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 2"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wpcontato3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/purple"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 3"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wpcontato4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/tomato"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 4"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wpcontato5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/blue"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 5"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wpcontato6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="50"
            android:background="@color/teal"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Contato 6"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/abrirWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/whatsappgreen"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="ABRIR WHATSAPP"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>